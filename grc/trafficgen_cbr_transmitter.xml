<?xml version="1.0"?>
<block>
	<name>CBR Transmitter</name>
	<key>trafficgen_cbr_transmitter</key>
	<category>[trafficgen]</category>
	<import>import trafficgen</import>
	<make>trafficgen.cbr_transmitter($packet_size, $packet_interval, $start_time, $stop_time)</make>
  	<!-- Make one 'param' node for every Parameter you want settable from the GUI.
		   Sub-nodes:
	   		* name
	   		* key (makes the value accessible as $keyname, e.g. in the make node)
	   		* type -->
	<param>
		<name>Packet Size</name>
		<key>packet_size</key>
		<value>1500</value>
		<type>int</type>
	</param>

	<param>
		<name>Packet Interval</name>
		<key>packet_interval</key>
		<value>1</value>
		<type>float</type>
	</param>

	<param>
		<name>Start Time</name>
		<key>start_time</key>
		<value>0</value>
		<type>float</type>
	</param>

	<param>
		<name>Stop Time</name>
		<key>stop_time</key>
		<value>0</value>
		<type>float</type>
	</param>

  	<!-- Make one 'sink' node per input. Sub-nodes:
			* name (an identifier for the GUI)
			* type
			* vlen
			* optional (set to 1 for optional inputs) -->
	<sink>
		<name>Trigger Start</name>
		<type>message</type>
		<optional>1</optional>
	</sink>

	<sink>
		<name>Trigger Stop</name>
		<type>message</type>
		<optional>1</optional>
	</sink>

	<sink>
		<name>Content</name>
		<type>byte</type>
		<optional>1</optional>
	</sink>

  	<!-- Make one 'source' node per output. Sub-nodes:
			* name (an identifier for the GUI)
			* type
			* vlen
			* optional (set to 1 for optional inputs) -->
	<source>
		<name>pdu</name>
		<type>byte</type>
		<optional>1</optional> <!-- TODO remove -->
	</source>
</block>
